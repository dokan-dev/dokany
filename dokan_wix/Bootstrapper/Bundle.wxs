<?include ..\version.xml ?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
	 xmlns:bal="http://wixtoolset.org/schemas/v4/wxs/bal"
	 xmlns:dep="http://wixtoolset.org/schemas/v4/wxs/dependency"
	 xmlns:util="http://wixtoolset.org/schemas/v4/wxs/util">

	<Bundle Name="$(var.ProductName) $(var.BaseVersion).$(var.BuildVersion) Bundle"
			IconSourceFile="..\dokan.ico"
			Version="$(var.BaseVersion).$(var.BuildVersion)"
			Manufacturer="$(var.CompanyName)"
			ProviderKey="$(var.ProviderKey)"
			UpgradeCode="$(var.BundleUpgradeCode)"
			UpdateUrl="$(var.UpdateURL)"
			DisableModify="yes">
		<util:FileSearchRef Id="WINTRUST_FileSearch" />	
		<BootstrapperApplication>
			<bal:WixStandardBootstrapperApplication
				LicenseFile="Resources\licdata.rtf"
				LogoFile="Resources\dokan.png"
				ShowVersion="yes"
				SuppressOptionsUI="no"
				SuppressRepair="yes"
				Theme="rtfLicense"
				ThemeFile="Resources\RtfTheme.xml"
				LocalizationFile="Resources\RtfTheme.wxl"/>
			<Payload Name="Resources\RtfTheme.wxl" SourceFile="Resources\RtfTheme.wxl" />
			<Payload Name="dokan.ico" SourceFile="..\dokan.ico" Compressed="yes" />
		</BootstrapperApplication>

		<Variable Name="InstallFolder" Type="formatted" Value="[ProgramFiles6432Folder]Dokan\Dokan Library-$(var.BaseVersion)" />
		<Variable Name="CommandLineArgument" bal:Overridable="yes" />
		<Variable Name="DevFilesCheckbox" Type="numeric" Value="1" />

		<bal:Condition
			Message="Installation failed because your version of Windows is not supported. Dokan requires Windows 7 SP1 or newer."
			Condition="Installed OR VersionNT &gt; v6.1 OR (VersionNT = v6.1 AND ServicePackLevel &gt;= 1)"/>

		<Chain>
			<MsiPackage SourceFile="..\bin\x86\$(var.Configuration)\Dokan_x86.msi"
						InstallCondition="NOT VersionNT64"
						Compressed="yes"
						Visible="no">
				<!--<MsiProperty Name="ADDLOCAL" Value="ALL" />-->
				<MsiProperty Name="MSIUNINSTALLSUPERSEDEDCOMPONENTS" Value="1" />
				<MsiProperty Name="INSTALLDIR" Value="[InstallFolder]" />
				<MsiProperty Name="INSTALLDEVFILES" Value="[DevFilesCheckbox]" />
			</MsiPackage>

			<!-- IMAGE_FILE_MACHINE_AMD64 = 34404-->
			<MsiPackage SourceFile="..\bin\x64\$(var.Configuration)\Dokan_x64.msi"
						InstallCondition="(VersionNT64 AND NOT NativeMachine) OR (NativeMachine = 34404)" 
						Compressed="yes"
						Visible="no">
				<!--<MsiProperty Name="ADDLOCAL" Value="ALL" />-->
				<MsiProperty Name="MSIUNINSTALLSUPERSEDEDCOMPONENTS" Value="1" />
				<MsiProperty Name="INSTALLDIR" Value="[InstallFolder]" />
				<MsiProperty Name="INSTALLDEVFILES" Value="[DevFilesCheckbox]" />
			</MsiPackage>

			<!-- IMAGE_FILE_MACHINE_AMD64 = 43620 -->
			<MsiPackage SourceFile="..\bin\ARM64\$(var.Configuration)\Dokan_ARM64.msi"
						InstallCondition="NativeMachine = 43620"
						Compressed="yes"
						Visible="no">
				<!--<MsiProperty Name="ADDLOCAL" Value="ALL" />-->
				<MsiProperty Name="MSIUNINSTALLSUPERSEDEDCOMPONENTS" Value="1" />
				<MsiProperty Name="INSTALLDIR" Value="[InstallFolder]" />
				<MsiProperty Name="INSTALLDEVFILES" Value="[DevFilesCheckbox]" />
			</MsiPackage>

		</Chain>
	</Bundle>
	<Fragment>
		<util:FileSearch Id="WINTRUST_FileSearch"
						 Path="[SystemFolder]Wintrust.dll"
						 Variable="WINTRUSTVERSION"
						 Result="version" />
		<bal:Condition Message="Microsoft patch KB4474419 is not installed. A reboot is needed between the installation of said patch and the installation of $(var.ProductName). https://support.microsoft.com/en-us/kb/4474419"
					   Condition="Installed OR VersionNT &gt; v6.1 OR (VersionNT = v6.1 AND (WINTRUSTVERSION &gt;= v6.1.7601.24382))" />
	</Fragment>
</Wix>
